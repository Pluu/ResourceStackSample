<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SectionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PreviewDividerStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">12dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/divider_preview_tag</item>
        <item name="android:rotation">-70</item>
    </style>

    <style name="MyTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/bg_text_view</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

        <!-- theme의 textColor 보다 우선 순위가 높음-->
<!--        <item name="android:textColor">#000</item>-->
    </style>

    <style name="MyTextStyle.Preview">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyCustomTextColorStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/selector_custom_textview</item>
        <item name="android:textColorHint">#C51162</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyCustomTextColorStyle.Preview">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:hint">Please Input...</item>
        <item name="android:textSize">20sp</item>

        <!-- theme의 editTextColor 보다 우선 순위가 높음-->
<!--        <item name="android:textColor">#000</item>-->
    </style>

    <style name="MyEditTextStyle.Preview">
        <item name="android:background">@null</item>
        <item name="android:hint">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/selector_default_button</item>
        <item name="android:textSize">20sp</item>
        <item name="backgroundTint">@color/selector_default_button_bg</item>
    </style>

    <style name="MyButtonStyle.Preview" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MyCustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/selector_custom_button</item>
        <item name="backgroundTint">@color/selector_custom_button_bg</item>
    </style>

    <style name="MyCustomButtonStyle.Preview">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>