<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ResourceStackSample" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Custom Color -->
        <item name="android:textColor">@color/selector_default_textview</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <item name="android:editTextColor">@color/selector_default_edittext</item>
        <item name="editTextColor">@color/selector_default_edittext</item>

        <!-- Custom Style -->
        <item name="android:textViewStyle">@style/MyTextStyle</item>

        <item name="android:editTextBackground">@drawable/bg_text_view</item>
        <item name="editTextBackground">@drawable/bg_text_view</item>
        <item name="editTextStyle">@style/MyEditTextStyle</item>
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
    </style>

    <style name="Theme.ResourceStackSample.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ResourceStackSample.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ResourceStackSample.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>