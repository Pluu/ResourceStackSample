<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="BaseTheme.Styled">
        <!-- TextView TextColor -->
        <!-- Support 4.4.2+ -->
        <!-- TextVIew, Button, Toggle -->
        <item name="android:textColor">@color/selector_default_textview</item>

        <!-- Hint Color -->
        <!-- Support 4.4.2+ -->
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- EditText TextColor -->
        <!-- Support 5.0+ -->
        <item name="android:editTextColor">@color/selector_default_edittext</item>
        <!-- Support 4.4.2 -->
        <item name="editTextColor">@color/selector_default_edittext</item>

        <!-- EditText Background -->
        <!-- Support 5.0+ -->
        <item name="android:editTextBackground">@drawable/bg_edit_text_view</item>
        <!-- Support 4.4.2 -->
        <item name="editTextBackground">@drawable/bg_edit_text_view</item>

        <!-- TextView Style -->
        <!-- Support 4.4.2+ -->
        <item name="android:textViewStyle">@style/MyTextStyle</item>

        <!-- EditText Style -->
        <!-- Not Working -->
        <item name="android:editTextStyle">@style/MyEditTextStyle</item>
        <!-- Support 4.4.2+ -->
        <item name="editTextStyle">@style/MyEditTextStyle</item>

        <!-- Button Style -->
        <!-- Support 5.0+ -->
        <item name="android:buttonStyle">@style/MyButtonStyle</item>
        <!-- Support 4.4.2+ -->
        <item name="buttonStyle">@style/MyButtonStyle</item>

        <!-- EditText, Button, Toggle -->
<!--        <item name="android:textColorPrimary">@color/selector_default_textview</item>-->
        <!-- CompoundButton (CheckBox, RadioButton, Switch) -->
<!--        <item name="android:textColorPrimaryDisableOnly">@color/selector_default_textview</item>-->
        <!-- TextView -->
<!--        <item name="android:textColorTertiary">@color/selector_default_textview</item>-->
    </style>
</resources>